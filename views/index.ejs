<!DOCTYPE html>
<html lang="pt-br">
  <head>
      
    <%- include('./components/head') %>

  </head>
  <body>

    <%- include('./components/nav') %>

    <header>
        <img src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/3a650fd1-eca0-4a27-8204-ef3ea54b80d2/daf1mc0-549c018b-b7ba-46de-bcc3-bfe0b527a935.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..B7RiXDw9rsVLwaDLOz0cCwJp2iuCJNK-YP7Z7rfVFSg" alt="">
    </header>

    <main>

        <section id="cards">

            <h2>Lista de livros</h2>

            <% pokedex.forEach((pokemon) => { %>
                <div class="card">
                
                    <img src="<%= pokemon.imagem %>" alt="" onmouseover="this.src=`<%= pokemon.imagem1 %>`" onmouseout="this.src=`<%= pokemon.imagem%>`">
                    <h3><%= pokemon.nome %></h3>
                    <p class="descricao"><%= pokemon.descricao %></p>
                    <p>Tipo: <%= pokemon.tipo %></p>
                    <a id="editar" href="/getById/<%= pokemon.id %>/put">Editar</a>
                    <a id="apagar" href="/getById/<%= pokemon.id %>/delete">Apagar</a>
        
                </div>
            <% }) %>
        
        </section>

    </main>

    <% if (pokemonPut != null) { %>
      <%- include('./components/modalPut') %>
    <% } %>

    <% if (pokemonDel != null) { %>
      <%- include('./components/modalDel') %>
    <% } %>

    <%- include('./components/footer') %>

  </body>
</html>
