<section class="modal-overlay" id="overlay">
    <div class="modal" id="modal">

        <div class="modal-header">
            <h3>Atualizar livro</h3>
            <a href="/" id="close-modal-put">X</a>
        </div>

        <div class="modal-body">

            <form class="form-modal" action="/update/<%= pokemonPut.id %>" method="post">

                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" value="<%= pokemonPut.nome %>">
    
                <label for="descricao">Descrição:</label>
                <input type="text" id="descricao" name="descricao" value="<%= pokemonPut.descricao %>">
    
               <label for="tipo">Autor:</label>
               <input type="text" id="tipo" name="tipo" value="<%= pokemonPut.tipo %>">
    
               <label for="imagem">Link da imagem:</label>
               <input type="text" id="imagem" name="imagem" value="<%= pokemonPut.imagem %>">
    
               <button id="btncadastrar" type="submit">Atualizar</button>
    
            </form>
        </div>

    </div>
</section>